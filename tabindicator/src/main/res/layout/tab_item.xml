<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kevin="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.kevin.tabindicator.TabPageView
        android:id="@+id/tab_icon_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/indicate_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@id/tab_icon_view"
        android:contentDescription="@null"
        android:src="@drawable/update_hint"
        android:visibility="gone" />

</RelativeLayout>